includes:
	- vendor-bin/phpstan/vendor/phpstan/phpstan/conf/bleedingEdge.neon
	- vendor/onlishop/core/DevOps/StaticAnalyze/PHPStan/extension.neon
	- vendor/onlishop/core/DevOps/StaticAnalyze/PHPStan/rules.neon

parameters:
	phpVersion: 80200
	level: 8
	treatPhpDocTypesAsCertain: false
	inferPrivatePropertyTypeFromConstructor: true
	reportUnmatchedIgnoredErrors: true
	checkFunctionNameCase: true
	checkInternalClassCaseSensitivity: true
	tmpDir: var/cache/phpstan_dev
	bootstrapFiles:
		- vendor/onlishop/core/DevOps/StaticAnalyze/phpstan-bootstrap.php

	symfony:
		constantHassers: false
		containerXmlPath: 'var/cache/static_phpstan_dev/Onlishop_Core_DevOps_StaticAnalyze_StaticAnalyzeKernelPhpstan_devDebugContainer.xml'
		consoleApplicationLoader: vendor/onlishop/core/DevOps/StaticAnalyze/console-application.php

	type_perfect:
		no_mixed_property: true
		no_mixed_caller: true
		null_over_false: true

	excludePaths:
		- **/vendor/*

services:
	- # register the class, so we can decorate it, but don't tag it as a rule, so only our decorator is used by PHPStan
		class: Symplify\PHPStanRules\Rules\NoReturnSetterMethodRule

rules:
	# domain
	- Symplify\PHPStanRules\Rules\Enum\RequireUniqueEnumConstantRule
	- Symplify\PHPStanRules\Rules\PreventParentMethodVisibilityOverrideRule

	# explicit naming
	- Symplify\PHPStanRules\Rules\ForbiddenMultipleClassLikeInOneFileRule

	- Symplify\PHPStanRules\Rules\Complexity\ForbiddenArrayMethodCallRule

	# complexity rules
	- Symplify\PHPStanRules\Rules\NoDynamicNameRule

	# naming rules
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Symplify\NoReturnSetterMethodWithFluentSettersRule
	- Symplify\PHPStanRules\Rules\UppercaseConstantRule

	# Onlishop core rules
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Deprecation\DeprecatedMethodsThrowDeprecationRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Migration\AddColumnRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Migration\NoAfterStatementRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Migration\NoDropStatementInUpdateRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Tests\CoversAttributeRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\Tests\MockingSimpleObjectsNotAllowedRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\FinalClassRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\AbstractClassUsageRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\DecorationPatternRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\ExtensionRule
	- Onlishop\Core\DevOps\StaticAnalyze\PHPStan\Rules\NoNewRequestInStorefrontRule
